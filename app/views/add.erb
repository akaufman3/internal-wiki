<section class="addArticleCont">
	<div class="demo-card-wide mdl-card mdl-shadow--2dp">
	  	<div class="mdl-card__title">
	    	<h2 class="mdl-card__title-text">Create article</h2>
	  	</div>
		<form class="add" action ="/add" method="post">
			<div class="mdl-card__supporting-text">
				<div class="input-row mdl-textfield mdl-js-textfield">
					<select class="mdl-textfield__input" id="category" name="category">
						<% @categories.each do |category| %>
							<option value="<%= "#{category['category']}" %>"><%= "#{category['category']}" %></option>
						<% end %>
					</select>
					<label class="mdl-textfield__label" for="category">Category: </label>
				</div>

				<div class="input-row mdl-textfield mdl-js-textfield">
					<input class="mdl-textfield__input" id="title" type="text" name="title" value=""/>
					<label class="mdl-textfield__label" for="title">Title: </label>
				</div>

				<div class="input-row mdl-textfield mdl-js-textfield">
					<input class="mdl-textfield__input" id="author" type="text" name="author" value=""/>
					<label class="mdl-textfield__label" for="author">Author: </label>
				</div>

				<div class="input-row mdl-textfield mdl-js-textfield">
					<label class="mdl-textfield__label" for="copy">Copy: </label>
					<textarea class="mdl-textfield" id="copy" type="text" name="copy"></textarea>
				</div>
			</div>

			<div class="mdl-card__actions mdl-card--border">
				<div class="input-row">
					<input type="submit" value="Create" />
				</div>
			</div>

		</form>
</section>
