<div class="demo-card-wide mdl-card mdl-shadow--2dp">
  	<div class="mdl-card__title">
    	<h2 class="mdl-card__title-text">Sign up</h2>
  	</div>

	<form action="/signup" method="post">
		<div class="mdl-card__supporting-text">
			<div class="input-row mdl-textfield mdl-js-textfield">
				<input class="mdl-textfield__input" id="fname" type="text" name="fname" required />
				<label class="mdl-textfield__label" for="fname">First Name: </label>
			</div>

			<div class="input-row mdl-textfield mdl-js-textfield">
				<input class="mdl-textfield__input" id="lname" type="text" name="lname" required />
				<label class="mdl-textfield__label" for="lname">Last Name: </label>
			</div>

			<div class="input-row mdl-textfield mdl-js-textfield">
				<input class="mdl-textfield__input" id="position" type="text" name="position" required />
				<label class="mdl-textfield__label" for="position">Position: </label>
			</div>

			<div class="input-row mdl-textfield mdl-js-textfield">
				<input class="mdl-textfield__input" id="email" type="text" name="email" required />
				<label class="mdl-textfield__label" for="email">Email: </label>
			</div>
			
			<div class="input-row mdl-textfield mdl-js-textfield">
				<input class="mdl-textfield__input" id="password_digest" type="password" name="password_digest" required />
				<label class="mdl-textfield__label" for="password_digest">Password: </label>
			</div>
		</div>
		<div class="mdl-card__actions mdl-card--border">
			<div class="input-row">
				<input type="submit" value="Signup" />
			</div>
		</div>	
	</form>
</div>